<div class="process-deposit-container">
	<h3>Process Deposits</h3>
	<div class="process-deposit-form">
		<label for="process-amount">Amount to Process:</label>
		<input type="number" id="process-amount" placeholder="Enter amount" min="0" step="0.000001" />
		<button id="process-button" disabled>Process Deposits</button>
	</div>
	<div id="process-status" class="status-message"></div>
</div>

<style>
	.process-deposit-container {
		margin: 2rem 0;
		padding: 1.5rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		border-radius: 8px;
	}

	.process-deposit-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.process-deposit-form label {
		color: rgb(var(--accent-light));
		font-weight: bold;
	}

	.process-deposit-form input {
		padding: 0.75rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		border-radius: 4px;
		background: rgba(var(--accent-dark), 50%);
		color: white;
		font-size: 1rem;
	}

	.process-deposit-form input:focus {
		outline: none;
		border-color: rgb(var(--accent-light));
	}

	.process-deposit-form button {
		padding: 0.75rem 1.5rem;
		background: linear-gradient(45deg, rgb(var(--accent-light)), rgb(var(--accent-dark)));
		border: none;
		border-radius: 4px;
		color: white;
		font-weight: bold;
		cursor: pointer;
		transition: opacity 0.2s;
	}

	.process-deposit-form button:hover:not(:disabled) {
		opacity: 0.8;
	}

	.process-deposit-form button:disabled {
		opacity: 0.5;
		cursor: not-allowed;
	}

	.status-message {
		padding: 0.5rem;
		border-radius: 4px;
		font-weight: bold;
		text-align: center;
	}

	.status-message.success {
		background: rgba(0, 255, 0, 0.2);
		color: #00ff00;
		border: 1px solid #00ff00;
	}

	.status-message.error {
		background: rgba(255, 0, 0, 0.2);
		color: #ff0000;
		border: 1px solid #ff0000;
	}

	.status-message.info {
		background: rgba(0, 150, 255, 0.2);
		color: #0096ff;
		border: 1px solid #0096ff;
	}
</style>

<script>
	import { getPublicKey, signTransaction } from "../stellar-wallets-kit";
	import stoken from "../contracts/stoken";

	const processAmountInput = document.getElementById('process-amount') as HTMLInputElement;
	const processButton = document.getElementById('process-button') as HTMLButtonElement;
	const statusMessage = document.getElementById('process-status') as HTMLElement;

	function showStatus(message: string, type: 'success' | 'error' | 'info' = 'info') {
		statusMessage.textContent = message;
		statusMessage.className = `status-message ${type}`;
	}

	function clearStatus() {
		statusMessage.textContent = '';
		statusMessage.className = 'status-message';
	}

	async function checkWalletConnection() {
		const publicKey = await getPublicKey();
		processButton.disabled = !publicKey || !processAmountInput.value || parseFloat(processAmountInput.value) <= 0;
	}

	processAmountInput.addEventListener('input', checkWalletConnection);

	processButton.addEventListener('click', async () => {
		const publicKey = await getPublicKey();
		if (!publicKey) {
			showStatus('Please connect your wallet first', 'error');
			return;
		} else {
            stoken.options.publicKey = publicKey;
            stoken.options.signTransaction = signTransaction;
        }

		const amount = parseFloat(processAmountInput.value);
		if (amount <= 0) {
			showStatus('Please enter a valid amount', 'error');
			return;
		}

		try {
			showStatus('Processing deposits...', 'info');
			processButton.disabled = true;

			// Call the process_deposits function on the stoken contract
			const tx = await stoken.process_deposits({
				amount: BigInt(Math.floor(amount * 10000000)) // Convert to smallest unit (7 decimals precision)
			});

			await tx.signAndSend();

			showStatus('Deposits processed successfully!', 'success');
			processAmountInput.value = '';
			
			// Trigger balance update
			window.dispatchEvent(new CustomEvent('walletConnected'));
			
		} catch (error) {
			console.error('Process deposits error:', error);
			const errorMessage = error instanceof Error ? error.message : 'Unknown error';
			showStatus(`Process deposits failed: ${errorMessage}`, 'error');
		} finally {
			processButton.disabled = false;
			checkWalletConnection();
		}
	});

	// Check wallet connection on load
	checkWalletConnection();

	// Listen for wallet connection changes
	window.addEventListener('walletConnected', checkWalletConnection);
	window.addEventListener('walletDisconnected', () => {
		processButton.disabled = true;
		clearStatus();
	});
</script>
